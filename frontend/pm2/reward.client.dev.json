{
  "apps" : [{
    "name": "reward.client.dev",
    "script": "scripts/start.js",
    "ignore_watch" : ["node_modules", "logs"],
    "watch_options": {
      "followSymlinks": false
    },
    "env": {
      "NODE_ENV": "dev",
      "NODE_PATH": "src"
    },
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "error_file": "./logs/reward.client.dev.stderr.log",
    "out_file": "./logs/reward.client.dev.stdout.log",
    "pid_file": "./logs/reward.client.dev.pid"
  }]
} 